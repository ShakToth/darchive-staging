/* --- GOOGLE FONTS & VARIABLEN --- */
@import url('https://fonts.googleapis.com/css2?family=Crimson+Text:ital,wght@0,400;0,600;1,400&family=MedievalSharp&family=Cinzel:wght@400;700&display=swap');

:root {
    --bg-wood: #2c1e12;
    --bg-parchment: #f4e4bc;
    --bg-parchment-dark: #e3d1a2;
    --text-ink: #3e2e1e;
    --accent-gold: #d4af37;
    --accent-red: #800000;
    --shadow-color: rgba(0,0,0,0.4);
    --font-heading: 'MedievalSharp', cursive;
    --font-body: 'Crimson Text', serif;
    --font-elegant: 'Cinzel', serif;
    
    /* WoW Item Quality Colors */
    --quality-common: #9d9d9d;
    --quality-uncommon: #1eff00;
    --quality-rare: #0070dd;
    --quality-epic: #a335ee;
    --quality-legendary: #ff8000;
}

body {
    font-family: var(--font-body);
    background-color: var(--bg-wood);
    color: var(--text-ink);
    margin: 0;
    padding: 40px 20px;
    line-height: 1.5;
    min-height: 100vh;
}

/* --- VOLLBILD RAUM MODUS --- */
body.room-mode {
    padding: 0; margin: 0; overflow: hidden; background: #000;
}

/* NEUE TOP NAVIGATION */
.top-nav {
    position: fixed; top: 0; left: 0; width: 100%; height: 70px;
    background: linear-gradient(to bottom, rgba(44, 30, 18, 0.95), rgba(26, 17, 9, 0.9));
    backdrop-filter: blur(10px);
    border-bottom: 2px solid rgba(212, 175, 55, 0.3);
    box-shadow: 0 5px 20px rgba(0,0,0,0.7);
    z-index: 100;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 40px;
    box-sizing: border-box;
}

.nav-left {
    flex: 1;
}

.nav-wappen {
    display: flex;
    align-items: center;
    font-family: var(--font-heading);
    font-size: 1.3rem;
    color: var(--accent-gold);
    text-decoration: none;
    text-shadow: 0 0 10px rgba(212, 175, 55, 0.5);
    transition: all 0.3s;
}

.nav-wappen img {
    filter: drop-shadow(0 0 10px rgba(212, 175, 55, 0.3));
    transition: all 0.3s;
}

.nav-wappen:hover {
    color: #fff;
    text-shadow: 0 0 20px rgba(212, 175, 55, 0.8);
}

.nav-wappen:hover img {
    filter: drop-shadow(0 0 15px rgba(212, 175, 55, 0.6));
}

.nav-logo {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    color: var(--accent-gold);
    text-decoration: none;
    text-shadow: 0 0 10px rgba(212, 175, 55, 0.5);
    transition: all 0.3s;
}

.nav-logo:hover {
    color: #fff;
    text-shadow: 0 0 20px rgba(212, 175, 55, 0.8);
}

.nav-center {
    flex: 2;
    display: flex;
    justify-content: center;
    gap: 30px;
}

.nav-link {
    font-family: var(--font-elegant);
    font-size: 1.2rem;
    color: var(--bg-parchment);
    text-decoration: none;
    position: relative;
    padding: 5px 0;
    transition: all 0.3s;
    letter-spacing: 0.5px;
}

.nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--accent-gold);
    transition: width 0.3s;
}

.nav-link:hover {
    color: var(--accent-gold);
}

.nav-link:hover::after {
    width: 100%;
}

.nav-right {
    flex: 1;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    gap: 15px;
}

.nav-input {
    background: rgba(244, 228, 188, 0.1);
    border: 1px solid rgba(212, 175, 55, 0.3);
    color: var(--bg-parchment);
    padding: 8px 15px;
    border-radius: 4px;
    font-family: var(--font-body);
    font-size: 0.9rem;
}

.nav-input::placeholder {
    color: rgba(244, 228, 188, 0.5);
}

.nav-btn {
    background: linear-gradient(to bottom, #edc967, #d4af37);
    color: #2c1e12;
    border: none;
    padding: 8px 20px;
    border-radius: 4px;
    font-family: var(--font-heading);
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.2s;
}

.nav-btn:hover {
    background: linear-gradient(to bottom, #e0bd5b, #c49f27);
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(212, 175, 55, 0.4);
}

.admin-badge {
    color: #28a745;
    font-family: var(--font-heading);
    font-size: 0.9rem;
}

.btn-logout {
    background: linear-gradient(to bottom, #a62c2c, #800000);
    color: #ffdddd;
    padding: 6px 15px;
    border-radius: 4px;
    text-decoration: none;
    font-family: var(--font-heading);
    font-size: 0.9rem;
    transition: all 0.2s;
}

.btn-logout:hover {
    background: #c0392b;
    transform: translateY(-2px);
}

.top-bar {
    position: fixed; top: 0; left: 0; width: 100%; height: 60px;
    background: #2c1e12; border-bottom: 3px solid #1a1109;
    box-shadow: 0 5px 15px rgba(0,0,0,0.5); z-index: 100;
    display: flex; justify-content: space-between; align-items: center;
    padding: 0 20px; box-sizing: border-box;
}
.top-bar h1 { font-size: 1.5rem; margin: 0; color: #e3d1a2; border: none; padding: 0; }
.admin-badge { color: #28a745; margin-right: 15px; font-family:var(--font-heading); }

.fullscreen-bg {
    position: fixed; top: 70px; left: 0; width: 100vw; height: calc(100vh - 70px);
    object-fit: cover; object-position: center; z-index: 1;
}

/* --- HOTSPOTS --- */
.fullscreen-hotspot { position: fixed; z-index: 10; }
.hotspot {
    background: transparent; box-shadow: none; border: none;
    transition: background 0.3s, box-shadow 0.3s; cursor: pointer;
}
.hotspot:hover {
    background: rgba(255, 215, 0, 0.1);
    box-shadow: 0 0 30px rgba(255, 215, 0, 0.4);
    border: 1px solid rgba(255, 215, 0, 0.3);
}
.hotspot-label {
    position: absolute; bottom: -40px; left: 50%; transform: translateX(-50%);
    background: rgba(0, 0, 0, 0.8); color: #d4af37; padding: 5px 10px;
    border-radius: 4px; white-space: nowrap; opacity: 0; transition: opacity 0.3s, bottom 0.3s;
    font-family: var(--font-heading); pointer-events: none;
}
.hotspot:hover .hotspot-label { opacity: 1; bottom: 10px; }

/* --- LISTEN ANSICHT --- */
.container {
    max-width: 1200px; margin: 0 auto; background-color: var(--bg-parchment); padding: 40px;
    box-shadow: inset 0 0 50px rgba(139, 69, 19, 0.3), 0 10px 20px var(--shadow-color), 0 0 0 10px var(--bg-wood);
    border-radius: 5px; position: relative;
    animation: candleflicker 4s infinite ease-in-out;
}

/* CANDLELIGHT FLACKERN */
@keyframes candleflicker {
    0%, 100% { filter: brightness(1); }
    50% { filter: brightness(1.02); }
}

.container-forbidden {
    background-color: #e6d0d0;
    box-shadow: inset 0 0 80px rgba(100, 0, 0, 0.2), 0 10px 20px var(--shadow-color), 0 0 0 10px #2a0a0a;
}
.container-forbidden h1 { color: #800000; border-bottom-color: #800000; }

h1 { 
    font-family: var(--font-heading); font-size: 2.5rem; margin: 0; 
    border-bottom: 3px double var(--text-ink); display: inline-block; padding-bottom: 10px; 
}

header {
    display: flex; justify-content: space-between; align-items: center; width: 100%;
    margin-bottom: 30px; padding-bottom: 15px; border-bottom: 2px solid rgba(62, 46, 30, 0.2);
}
.back-btn {
    background: linear-gradient(to bottom, #a62c2c, #800000); color: #ffdddd !important;
    padding: 8px 16px; border-radius: 4px; border: 1px solid #4a0000;
    text-decoration: none; font-size: 0.9rem; font-family: var(--font-heading);
    box-shadow: 0 3px 5px rgba(0,0,0,0.3); white-space: nowrap;
    transition: all 0.2s;
}
.back-btn:hover { background: #c0392b; color: white !important; transform: translateY(-2px); }

/* Controls mit Drag & Drop Zone */
.controls {
    background-color: var(--bg-parchment-dark); padding: 25px; border-radius: 8px;
    margin-bottom: 40px; display: flex; gap: 20px; flex-wrap: wrap; align-items: center;
    border: 2px solid #8b5a2b; box-shadow: inset 0 0 15px rgba(0,0,0,0.2);
}

.upload-zone {
    flex: 1;
    min-width: 300px;
    padding: 30px;
    border: 3px dashed #8b5a2b;
    border-radius: 8px;
    text-align: center;
    background: var(--bg-parchment);
    transition: all 0.3s;
    cursor: pointer;
}

.upload-zone.dragover {
    background: #fff9e6;
    border-color: var(--accent-gold);
    box-shadow: 0 0 20px rgba(212, 175, 55, 0.5);
    transform: scale(1.02);
}

.upload-zone-icon {
    font-size: 3rem;
    margin-bottom: 10px;
    display: block;
}

.upload-zone-text {
    font-family: var(--font-heading);
    font-size: 1.1rem;
    color: var(--text-ink);
}

input[type="text"], input[type="file"], input[type="password"] {
    background: var(--bg-parchment); border: 2px solid #8b5a2b; color: var(--text-ink);
    padding: 10px; border-radius: 4px; font-weight: bold;
}

input[type="file"] {
    display: none;
}

button, .btn-logout {
    border: none; padding: 10px 20px; border-radius: 4px; cursor: pointer;
    background: linear-gradient(to bottom, #edc967, #d4af37, #a88623); color: #2c1e12;
    font-family: var(--font-heading); font-size: 1.1rem; border: 1px solid #8a6e2a;
    transition: all 0.2s;
}
button:hover { transform: translateY(-2px); background: linear-gradient(to bottom, #e0bd5b, #c49f27); }
.btn-logout { 
    background: linear-gradient(to bottom, #a62c2c, #800000, #5e0000); 
    color: #ffdddd; padding: 6px 12px; font-size: 0.9rem; 
}

/* Grid */
.grid { 
    display: grid; 
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr)); 
    gap: 30px; 
    padding: 20px 0; 
}

.card-wrapper { 
    display: flex; 
    flex-direction: column; 
    perspective: 1000px;
    position: relative;
}

/* WoW ITEM QUALITY SYSTEM */
.card {
    background-color: #3d2b1f; border-radius: 4px 8px 8px 4px; overflow: hidden;
    transition: all 0.3s cubic-bezier(.17,.67,.83,.67); 
    text-decoration: none; color: var(--bg-parchment);
    height: 100%; display: flex; flex-direction: column; 
    border: 2px solid #2c1e12; 
    position: relative;
    box-shadow: inset 15px 0 10px -5px rgba(0,0,0,0.5), 10px 10px 15px rgba(0,0,0,0.4);
}

/* BUCH AUFKLAPPEN ANIMATION */
.card:active {
    transform: rotateY(15deg) scale(1.05) !important;
    transition: all 0.2s cubic-bezier(.17,.67,.83,.67);
}

.card:hover { 
    transform: translateY(-8px) rotateY(-3deg);
    box-shadow: inset 15px 0 10px -5px rgba(0,0,0,0.7), 0 20px 40px rgba(0,0,0,0.5);
}

/* Item Quality - Common (Grau) - txt, md */
.card.quality-common {
    border-color: var(--quality-common);
}
.card.quality-common:hover {
    box-shadow: 0 0 20px rgba(157, 157, 157, 0.5), inset 15px 0 10px -5px rgba(0,0,0,0.7);
}

/* Item Quality - Uncommon (Grün) - doc, docx */
.card.quality-uncommon {
    border-color: var(--quality-uncommon);
}
.card.quality-uncommon:hover {
    box-shadow: 0 0 20px rgba(30, 255, 0, 0.5), inset 15px 0 10px -5px rgba(0,0,0,0.7);
}

/* Item Quality - Rare (Blau) - pdf, xlsx */
.card.quality-rare {
    border-color: var(--quality-rare);
}
.card.quality-rare:hover {
    box-shadow: 0 0 20px rgba(0, 112, 221, 0.6), inset 15px 0 10px -5px rgba(0,0,0,0.7);
}

/* Item Quality - Epic (Lila) - epub, zip, rar */
.card.quality-epic {
    border-color: var(--quality-epic);
}
.card.quality-epic:hover {
    box-shadow: 0 0 25px rgba(163, 53, 238, 0.7), inset 15px 0 10px -5px rgba(0,0,0,0.7);
}

/* Item Quality - Legendary (Orange) - Verbotene Dateien */
.card-forbidden,
.card.quality-legendary {
    background-color: #2a0a0a;
    border-color: var(--quality-legendary) !important;
    animation: forbidden-glow 3s infinite ease-in-out;
}

/* MAGISCHER GLOW auf Verbotenen */
@keyframes forbidden-glow {
    0%, 100% { 
        box-shadow: 0 0 15px rgba(255, 128, 0, 0.4), inset 15px 0 10px -5px rgba(80, 0, 0, 0.5);
    }
    50% { 
        box-shadow: 0 0 30px rgba(255, 128, 0, 0.8), inset 15px 0 10px -5px rgba(80, 0, 0, 0.7);
    }
}

.card-forbidden:hover,
.card.quality-legendary:hover {
    box-shadow: 0 0 40px rgba(255, 128, 0, 1), inset 15px 0 10px -5px rgba(80, 0, 0, 0.9);
}

.preview-box {
    height: 140px; background-color: #5c4033; display: flex; align-items: center; justify-content: center;
    overflow: hidden; border-bottom: 2px solid #2c1e12; position: relative;
}
.preview-box img { 
    width: 100%; height: 100%; object-fit: cover; 
    opacity: 0.8; mix-blend-mode: luminosity; transition: 0.3s; 
}
.card:hover .preview-box img { opacity: 1; mix-blend-mode: normal; }
.preview-box .icon { font-size: 4rem; filter: sepia(0.8); }

.file-info {
    display: flex;
    flex-direction: column;
    gap: 8px;
    padding: 15px 10px 15px 25px;
    flex-grow: 1;
}

.filename {
    font-size: 1rem; 
    font-family: var(--font-elegant);
    white-space: nowrap; 
    overflow: hidden; 
    text-overflow: ellipsis; 
    color: var(--bg-parchment);
    letter-spacing: 0.5px;
}

.file-meta {
    display: flex;
    flex-direction: column;
    gap: 4px;
    font-size: 0.75rem;
    color: rgba(244, 228, 188, 0.7);
    font-family: var(--font-body);
}

/* WOW-STYLE TOOLTIP */
.card-wrapper {
    position: relative;
}

.wow-tooltip {
    display: none;
    position: absolute;
    z-index: 1000;
    background: linear-gradient(to bottom, #1a1a1a 0%, #0d0d0d 100%);
    border: 2px solid;
    padding: 12px;
    border-radius: 4px;
    min-width: 200px;
    pointer-events: none;
    font-family: var(--font-body);
    box-shadow: 0 0 20px rgba(0,0,0,0.9);
}

.card-wrapper:hover .wow-tooltip {
    display: block;
    top: -10px;
    left: 105%;
}

.tooltip-header {
    font-family: var(--font-elegant);
    font-size: 1em;
    font-weight: bold;
    margin-bottom: 8px;
    padding-bottom: 6px;
    border-bottom: 1px solid rgba(255,255,255,0.2);
}

.tooltip-body {
    font-size: 0.85em;
    color: #ffd700;
}

.tooltip-body div {
    margin: 4px 0;
}

.tooltip-footer {
    margin-top: 8px;
    padding-top: 6px;
    border-top: 1px solid rgba(255,255,255,0.2);
    font-size: 0.75em;
    color: #888;
    font-style: italic;
}

/* Tooltip Farben je nach Qualität */
.quality-common .wow-tooltip { border-color: var(--quality-common); }
.quality-common .tooltip-header { color: var(--quality-common); }

.quality-uncommon .wow-tooltip { border-color: var(--quality-uncommon); }
.quality-uncommon .tooltip-header { color: var(--quality-uncommon); }

.quality-rare .wow-tooltip { border-color: var(--quality-rare); }
.quality-rare .tooltip-header { color: var(--quality-rare); }

.quality-epic .wow-tooltip { border-color: var(--quality-epic); }
.quality-epic .tooltip-header { color: var(--quality-epic); }

.quality-legendary .wow-tooltip { border-color: var(--quality-legendary); }
.quality-legendary .tooltip-header { color: var(--quality-legendary); }

.category-badge {
    display: inline-block;
    background: rgba(212, 175, 55, 0.2);
    border: 1px solid rgba(212, 175, 55, 0.4);
    color: #d4af37;
    padding: 2px 8px;
    border-radius: 3px;
    font-size: 0.7rem;
    font-family: var(--font-heading);
    margin-top: 4px;
    align-self: flex-start;
}

.badge-forbidden {
    background: rgba(255, 85, 85, 0.2);
    border-color: rgba(255, 85, 85, 0.4);
    color: #ff5555;
}

.delete-btn {
    position: absolute;
    top: 8px;
    right: 8px;
    z-index: 10;
    background: radial-gradient(circle at center, #a62c2c, #800000);
    color: #ffdddd;
    padding: 8px 12px;
    border-radius: 50%;
    font-size: 1rem;
    border: 2px solid #4a0000;
    box-shadow: 3px 3px 5px rgba(0,0,0,0.5);
    cursor: pointer;
    transition: all 0.2s;
}

/* FLAMMEN-EFFEKT beim Löschen */
.delete-btn:hover { 
    background: radial-gradient(circle at center, #ff4444, #cc0000);
    transform: scale(1.15);
    box-shadow: 0 0 20px rgba(255, 68, 68, 0.8);
    animation: flame-flicker 0.3s infinite;
}

@keyframes flame-flicker {
    0%, 100% { filter: brightness(1); }
    50% { filter: brightness(1.3); }
}

.msg { 
    padding: 15px; 
    border-radius: 4px; 
    margin-bottom: 30px; 
    text-align: center; 
    border: 2px solid; 
    background:white;
    font-family: var(--font-heading);
}
.success { 
    border-color: #28a745; 
    color: #2e5c35; 
    background: #d4edda; 
}
.error { 
    border-color: #dc3545; 
    color: #8a2c35; 
    background: #f8d7da; 
}

/* --- LIGHTBOX --- */
.lightbox {
    display: none; position: fixed; z-index: 2000; left: 0; top: 0; width: 100%; height: 100%; overflow: auto;
    background-color: rgba(0,0,0,0.95); backdrop-filter: blur(5px);
}
.lightbox-content {
    margin: auto; display: block; max-width: 90%; max-height: 90vh;
    border: 5px solid #2c1e12; box-shadow: 0 0 50px rgba(0,0,0,1);
    border-radius: 4px; position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);
}
.close-lightbox {
    position: absolute; top: 20px; right: 35px; color: #f1f1f1; font-size: 50px; font-weight: bold;
    cursor: pointer; font-family: var(--font-heading); transition: 0.3s; z-index: 2001;
}
.close-lightbox:hover { color: var(--accent-red); text-shadow: 0 0 10px red; }

/* --- RESPONSIVE --- */
@media (max-width: 768px) {
    .grid {
        grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
        gap: 20px;
    }
    
    h1 {
        font-size: 1.8rem;
    }
    
    .controls {
        flex-direction: column;
        align-items: stretch;
    }
    
    .controls form, .upload-zone {
        width: 100% !important;
        flex: none !important;
    }
    
    .card-wrapper:hover .wow-tooltip {
        display: none; /* Tooltips auf Mobile deaktivieren */
    }
}
